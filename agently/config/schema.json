{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Agently Configuration",
    "type": "object",
    "required": [
        "version",
        "agents"
    ],
    "additionalProperties": false,
    "properties": {
        "version": {
            "type": "string",
            "description": "Configuration format version",
            "validation": {
                "pattern": "^\\d+$",
                "options": [
                    "1"
                ]
            }
        },
        "env": {
            "type": "object",
            "description": "Global environment variables for all agents (overridden by agent/plugin env)",
            "additionalProperties": {
                "type": "string"
            }
        },
        "agents": {
            "type": "array",
            "description": "Multiple agents that can interact with each other",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "model"
                ],
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique identifier for the agent (optional)"
                    },
                    "name": {
                        "type": "string",
                        "description": "Name of the agent"
                    },
                    "description": {
                        "type": "string",
                        "description": "Description of the agent's purpose and capabilities"
                    },
                    "system_prompt": {
                        "type": "string",
                        "description": "System prompt that defines the agent's behavior (optional)"
                    },
                    "model": {
                        "type": "object",
                        "required": [
                            "provider",
                            "model"
                        ],
                        "additionalProperties": false,
                        "properties": {
                            "provider": {
                                "type": "string",
                                "description": "Model provider (e.g., openai, anthropic)"
                            },
                            "model": {
                                "type": "string",
                                "description": "Model name/version"
                            },
                            "temperature": {
                                "type": "number",
                                "default": 0.7,
                                "description": "Temperature for response generation",
                                "validation": {
                                    "range": {
                                        "min": 0.0,
                                        "max": 1.0
                                    }
                                }
                            },
                            "max_tokens": {
                                "type": [
                                    "integer",
                                    "null"
                                ],
                                "description": "Maximum tokens in response (null for no limit)"
                            },
                            "top_p": {
                                "type": [
                                    "number",
                                    "null"
                                ],
                                "description": "Top-p sampling parameter",
                                "validation": {
                                    "range": {
                                        "min": 0.0,
                                        "max": 1.0
                                    }
                                }
                            },
                            "frequency_penalty": {
                                "type": [
                                    "number",
                                    "null"
                                ],
                                "description": "Penalty for token frequency"
                            },
                            "presence_penalty": {
                                "type": [
                                    "number",
                                    "null"
                                ],
                                "description": "Penalty for token presence"
                            }
                        }
                    },
                    "features": {
                        "type": "object",
                        "description": "Agent features configuration",
                        "additionalProperties": false,
                        "properties": {
                            "deep_reasoning": {
                                "type": "boolean",
                                "description": "Enables advanced reasoning",
                                "default": false
                            }
                        }
                    },
                    "env": {
                        "type": "object",
                        "description": "Environment variables for this agent",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "plugins": {
                        "type": "array",
                        "description": "List of plugin definitions for this agent",
                        "items": {
                            "type": "object",
                            "required": [
                                "source",
                                "type"
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "source": {
                                    "type": "string",
                                    "enum": [
                                        "local",
                                        "github"
                                    ]
                                },
                                "path": {
                                    "type": "string"
                                },
                                "url": {
                                    "type": "string"
                                },
                                "version": {
                                    "type": "string"
                                },
                                "branch": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "sk",
                                        "mcp",
                                        "agently"
                                    ]
                                },
                                "env": {
                                    "type": "object",
                                    "additionalProperties": {
                                        "type": "string"
                                    }
                                },
                                "command": {
                                    "type": "string"
                                },
                                "args": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "variables": {
                                    "type": "object",
                                    "additionalProperties": true
                                }
                            },
                            "allOf": [
                                {
                                    "if": {
                                        "properties": {
                                            "source": {
                                                "const": "local"
                                            }
                                        }
                                    },
                                    "then": {
                                        "required": [
                                            "path"
                                        ],
                                        "properties": {
                                            "url": {
                                                "enum": [
                                                    null
                                                ]
                                            },
                                            "version": {
                                                "enum": [
                                                    null
                                                ]
                                            },
                                            "branch": {
                                                "enum": [
                                                    null
                                                ]
                                            }
                                        }
                                    }
                                },
                                {
                                    "if": {
                                        "properties": {
                                            "source": {
                                                "const": "github"
                                            }
                                        }
                                    },
                                    "then": {
                                        "required": [
                                            "url"
                                        ],
                                        "oneOf": [
                                            {
                                                "required": [
                                                    "version"
                                                ],
                                                "properties": {
                                                    "branch": {
                                                        "enum": [
                                                            null
                                                        ]
                                                    }
                                                }
                                            },
                                            {
                                                "required": [
                                                    "branch"
                                                ],
                                                "properties": {
                                                    "version": {
                                                        "enum": [
                                                            null
                                                        ]
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                },
                                {
                                    "if": {
                                        "properties": {
                                            "type": {
                                                "const": "sk"
                                            }
                                        }
                                    },
                                    "then": {
                                        "not": {
                                            "anyOf": [
                                                {
                                                    "required": [
                                                        "command"
                                                    ]
                                                },
                                                {
                                                    "required": [
                                                        "args"
                                                    ]
                                                },
                                                {
                                                    "required": [
                                                        "variables"
                                                    ]
                                                }
                                            ]
                                        }
                                    }
                                },
                                {
                                    "if": {
                                        "properties": {
                                            "type": {
                                                "const": "mcp"
                                            }
                                        }
                                    },
                                    "then": {
                                        "required": [
                                            "command",
                                            "args"
                                        ],
                                        "not": {
                                            "required": [
                                                "variables"
                                            ]
                                        }
                                    }
                                },
                                {
                                    "if": {
                                        "properties": {
                                            "type": {
                                                "const": "agently"
                                            }
                                        }
                                    },
                                    "then": {
                                        "not": {
                                            "anyOf": [
                                                {
                                                    "required": [
                                                        "command"
                                                    ]
                                                },
                                                {
                                                    "required": [
                                                        "args"
                                                    ]
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    }
}